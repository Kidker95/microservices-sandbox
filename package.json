{
    "name": "microservices-sandbox",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "type": "commonjs",
    "workspaces": [
        "services/*",
        "packages/*"
    ],
    "scripts": {
        "test": "jest",

        "seed": "ts-node --project tsconfig.json scripts/seed.ts",
        "seed:docker": "ts-node --project tsconfig.json scripts/seed.ts --gateway",
        
        "dev:users": "npm --prefix services/user-service run dev",
        "dev:orders": "npm --prefix services/order-service run dev",
        "dev:products": "npm --prefix services/product-service run dev",
        "dev:receipts": "npm --prefix services/receipt-service run dev",
        "dev:admin": "npm --prefix services/admin-service run dev",
        "dev:fortune": "npm --prefix services/fortune-service run dev",
        "dev:auth": "npm --prefix services/auth-service run dev",
        "dev:all": "concurrently -n \"user-service,order-service,product-service,receipt-service,admin-service,fortune-service,auth-service\" -c \"green,magenta,yellow,blue,cyan,red,white\" \"npm run dev:users\" \"npm run dev:orders\" \"npm run dev:products\" \"npm run dev:receipts\" \"npm run dev:admin\" \"npm run dev:fortune\" \"npm run dev:auth\"",
        
        "build:common": "npm -w @ms/common run build",
        "clean:common": "npm -w @ms/common run clean",
        
        "nginx:on": "powershell -ExecutionPolicy Bypass -File scripts/nginx/nginx-start.ps1",
        "nginx:off": "powershell -ExecutionPolicy Bypass -File scripts/nginx/nginx-stop.ps1",
        "nginx:reload": "powershell -ExecutionPolicy Bypass -File scripts/nginx/nginx-reload.ps1"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Kidker95/microservices-sandbox.git"
    },
    "bugs": {
        "url": "https://github.com/Kidker95/microservices-sandbox/issues"
    },
    "homepage": "https://github.com/Kidker95/microservices-sandbox#readme",
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/supertest": "^6.0.2",
        "concurrently": "^9.2.1",
        "jest": "^29.7.0",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    }
}
